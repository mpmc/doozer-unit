{
    "artifacts": [
        "unit*.deb",
        "unit*.changes",
    ],
    "targets": {
        "raspbian-stretch": {
            "environment": {
                "GIT_URL": "https://github.com/mpmc/unit.git",
                "GIT_BRANCH": "raspbian",
            },
            "buildenv": "raspbian-stretch",
            "builddeps": [
                "sudo",
                "git",
                "build-essential",
                "libxml2-utils",
                "lsb-release",
                "debhelper",
                "fakeroot",
                "xsltproc",
                "devscripts",
                "lintian",
                "php-dev",
                "libphp-embed",
                "python2.7-dev",
                "python3.5-dev",
            ],
            "buildcmd": [
                "cd ${WORKDIR}",
                "rm ${WORKDIR}/unit -R || true",
                "git clone -b ${GIT_BRANCH} ${GIT_URL} unit",
                "cd ${WORKDIR}/unit/pkg",
                "make deb",
                "mv ./deb/debuild*/*.{deb,changes,buildinfo} /project/repo/checkout",
            ]
        },
    },
}
